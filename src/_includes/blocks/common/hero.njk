<div class="py-16 dark:bg-black dark:bg-opacity-25 px-16">
  {# <div class="tca-container-md"> #}
  {% if tcaHeroShowSectionName and tcaSectionName %}
    <p class="text-neutral-400 font-semibold text-xl">
      <a href="{{ tcaSectionRoot }}">{{ tcaSectionName }}</a>
    </p>
  {% endif %}
  {% if title %}
    <h1 class="mb-4 text-3xl font-extrabold text-neutral-900 dark:text-white md:text-5xl lg:text-6xl">
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-green-300 via-blue-500 to-purple-600">
      {% if tcaTitleLink %}<a href="{{ tcaTitleLink }}">{% endif %}
        {{ title }}
      {% if tcaTitleLink %}</a>{% endif %}
      </span>
    </h1>
  {% endif %}
  {% if tcaSubtitle %}
    <h2 class="text-lg font-normal text-neutral-500 lg:text-xl dark:text-neutral-400 space-x-3">
      <span>{{ tcaSubtitle }}</span>
      {% if tcaHeroShowTags %}
        {# display tags with hashtags #}
        <span class="pr-4 space-x-3 my-4 text-lg text-neutral-500">
          {% for tag in tags %}
            <span>#{{ tag }}</span>
          {% endfor %}
        </span>
      {% endif %}
    </h2>
  {% endif %}
  {# </div> #}
</div>