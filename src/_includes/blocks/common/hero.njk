{% from "templates/buttons.njk" import primaryLinkButton with context %}

<div class="tca-container-md">
  {% if tcaHero.showSectionName and tcaSectionName %}
    <p class="text-neutral-400 font-semibold text-xl">
      <a href="{{ tcaSectionRoot }}">{{ tcaSectionName }}</a>
    </p>
  {% endif %}

  {# Hero title (and optional title link) #}
  {% if title %}
    <h1 class="font-extrabold text-neutral-900 dark:text-white {{ 'text-3xl md:text-5xl xl:text-6xl' if not tcaHero.isLongTitle else 'text-2xl md:text-4xl xl:text-5xl' }}">
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-green-300 via-blue-500 to-indigo-600">
      {% if tcaHero.titleLink %}<a href="{{ tcaHero.titleLink }}">{% endif %}
        {{ title }}
      {% if tcaHero.titleLink %}</a>{% endif %}
      </span>
    </h1>
  {% endif %}

  {# Hero subtitle (description) #}
  {% if tcaHero.subtitle %}
    <h2 class="mt-4 text-lg font-normal text-neutral-500 lg:text-xl dark:text-neutral-400 space-x-3">{{ tcaHero.subtitle }}</h2>
  {% endif %}

  {# Hero CTA button and info #}
  {% if tcaHero.ctaButton %}
    <div class="mt-8 flex items-center gap-6">
      <div class="shrink-0">
        {{ primaryLinkButton(title = tcaHero.ctaButton, link = tcaHero.ctaButtonLink, icon="theme/play.svg") }}
      </div>
      {% if tcaHero.ctaInfo %}
        <div class="text-xs dark:text-neutral-500 max-w-xs">{{ tcaHero.ctaInfo }}</div>
      {% endif %}
    </div>
  {% endif %}
</div>